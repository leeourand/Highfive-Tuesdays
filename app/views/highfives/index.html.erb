<h2>Leader Board</h2>
<table>
  <tr>
	<th>Place</th>
    <th>User</th>
    <th>Highfives Given</th>
  </tr>

<% @leaders.each_with_index do |leader, index| %>
  <tr>
    <td><%= (index + 1).ordinalize %></td>
    <td><%= leader.username %></td>
    <td><%= leader.highfives.count %></td>
  </tr>
<% end %>
</table>

<br />

